class Solution {
    public String bestHand(int[] ranks, char[] suits) {
        HashMap<Integer, Integer> rankCount = new HashMap<>();
        HashMap<Integer, Integer> suitsCount = new HashMap<>();
        for(int num : ranks){ //count all number for each
            rankCount.put(num,rankCount.getOrDefault(num,0)+1);
        }
        for(int num : suits){ // count all suits for each
            suitsCount.put(num,suitsCount.getOrDefault(num,0)+1);
        }
        if(suitsCount.containsValue(5)){
            return "Flush";
        }

        // Find max rank frequency
        int maxCount = 0;
        for (int count : rankCount.values()) {
            maxCount = Math.max(maxCount, count);
        }
        if (maxCount >= 3) {
            return "Three of a Kind";
        } else if (maxCount == 2) {
            return "Pair";
        } else {
            return "High Card";
        }
    }
}