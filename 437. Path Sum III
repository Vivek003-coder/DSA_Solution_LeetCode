class Solution {
    public int nopaths(TreeNode root, long sum){
        if(root == null) return 0;
        int count=0;
        if((long)(root.val) == sum) count++;
        return count + nopaths(root.left, sum-(long)(root.val)) + nopaths(root.right, sum-(long)(root.val));
    }
    public int pathSum(TreeNode root, int targetSum) {
        if(root == null) return 0;
        int count = nopaths(root,(long)targetSum);
        count += (pathSum(root.left, targetSum) + pathSum(root.right, targetSum));
        return count;
    }
}