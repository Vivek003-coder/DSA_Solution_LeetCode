class Solution {
    public void helper(List<Integer> arr,List<List<Integer>> ans,TreeNode root,int sum){
        if(root == null){
            return;
        }
        if(root.left == null && root.right == null){
            arr.add(root.val);
            if(root.val == sum){
                List<Integer> a = new ArrayList<>();
                for(int i=0;i<arr.size();i++){
                    a.add(arr.get(i));
                }
                ans.add(a);
            }
            arr.remove(arr.size()-1);
            return;
        }
        arr.add(root.val);
        helper(arr,ans,root.left,sum-root.val);
        helper(arr,ans,root.right,sum-root.val);
        arr.remove(arr.size()-1); //BackTracking
    }
    public List<List<Integer>> pathSum(TreeNode root, int targetSum) {
        List<List<Integer>> ans = new ArrayList<>();
        List<Integer> arr = new ArrayList<>();
        helper(arr,ans,root,targetSum);
        return ans;
    }
}